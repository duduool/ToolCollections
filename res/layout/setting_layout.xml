<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.wtu.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/setting_diveder"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#dddddd"
            android:orientation="horizontal" >
        </LinearLayout>

        <com.wtu.jazzylistview.JazzyListView
            android:id="@+id/android:list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_diveder"
            android:background="@color/gray"
            android:divider="@color/gray"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/setting_selector"
            app:effect="cards"
            app:max_velocity="0"
            app:only_animate_fling="false"
            app:only_animate_new_items="false" />
    </RelativeLayout>

</LinearLayout>